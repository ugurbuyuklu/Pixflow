{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://pixflow.local/schemas/playbook-registry.schema.json",
  "title": "Pixflow Playbook Registry",
  "type": "object",
  "additionalProperties": false,
  "required": ["$schema", "version", "updatedAt", "playbooks"],
  "properties": {
    "$schema": {
      "type": "string",
      "const": "./playbook-registry.schema.json"
    },
    "version": {
      "type": "string",
      "minLength": 1
    },
    "updatedAt": {
      "type": "string",
      "minLength": 1
    },
    "playbooks": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "provider",
          "id",
          "version",
          "ownerTeam",
          "ownerOncall",
          "runbookPath"
        ],
        "properties": {
          "provider": { "type": "string", "minLength": 1 },
          "id": { "type": "string", "minLength": 1 },
          "version": { "type": "string", "minLength": 1 },
          "ownerTeam": { "type": "string", "minLength": 1 },
          "ownerOncall": { "type": "string", "minLength": 1 },
          "runbookPath": {
            "type": "string",
            "pattern": "^docs/ops/runbooks/.+\\.md$"
          }
        }
      }
    }
  }
}
